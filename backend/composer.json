{
    "name": "phpleavesservice/backend",
    "description": "Backend API for PHP Leaves Service - Employee vacation request management system",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Neofytos Konstantinidis",
            "email": "neofytos.konstantinidis@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.6"
    },
    "autoload": {
        "psr-4": {
            "PhpLeavesService\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhpLeavesService\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public/"
    }
}